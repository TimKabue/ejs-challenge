<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="blogTitle" placeholder="Enter blog title here...">
  </div>
  <div class="mb-3">
    <label for="post" class="form-label">Post</label>
    <textarea name="blogPost" class="form-control" placeholder="Enter blog post here..."></textarea>
  </div>
  <button type="submit" class="btn btn-primary" id="postButton">Publish</button>
</form>

<%- include('partials/footer'); -%>